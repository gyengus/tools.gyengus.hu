extends layout

block content
	#box-container
		.col
			+box('Keresés')
				| Keresőmező
			+box('IP/Host')
				| IP:
				span#ip #{ip}
				br
				| Hostname:
				span#hostname
		.col
			+box('Olvasnivaló')
				| Itt lesznek a cikkek amik az oldalam RSS-éből jönnek
		.col
			+box('Jelszó generátor')
				span#password
			+box('')
				| Ez itt a reklám helye
		.col
			+box('Támogató gombok')
				| Flattr, PayPal donate
			+box('Osszad meg!')
				| Like, +1 gombok
	.clearfix
	script(src='/js/index.js')
